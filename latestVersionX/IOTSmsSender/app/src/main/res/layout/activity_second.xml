<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/second"
    android:background="#FFF0F5"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="13dp"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- Lottie Animation -->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/emergencyAnimation"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/contactus" />

            <!-- Title -->
            <TextView
                android:id="@+id/emergencyTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:text="Emergency Contacts"
                android:textColor="#C2185B"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Hospital Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/hospitalCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#FFE4EC"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <!-- Keep all ImageView and ImageButton IDs same -->
                        <ImageView
                            android:id="@+id/hospitalIcon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="Hospital Icon"
                            android:padding="4dp"
                            android:src="@drawable/ic_hospital" />

                        <TextView
                            android:id="@+id/hospitalText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingStart="12dp"
                            android:text="Hospital"
                            android:textColor="#C2185B"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/hospitalCall"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginRight="10dp"
                            android:backgroundTint="#C2185B"
                            android:contentDescription="Call Hospital"
                            android:src="@android:drawable/ic_menu_call" />

                        <ImageButton
                            android:id="@+id/gpsButton1"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:backgroundTint="#C2185B"
                            android:contentDescription="GPS Icon"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/gps" />

                    </LinearLayout>

                    <WebView
                        android:id="@+id/hospitalMapWebView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        tools:ignore="WebViewLayout" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Fire Station Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fireStationCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#FFE4EC"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/fireIcon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="Fire Station Icon"
                            android:padding="4dp"
                            android:src="@drawable/ic_fire" />

                        <TextView
                            android:id="@+id/fireStationText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingStart="12dp"
                            android:text="Fire Station"
                            android:textColor="#C2185B"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/fireStationCall"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginRight="10dp"
                            android:backgroundTint="#C2185B"
                            android:contentDescription="Call Fire Station"
                            android:src="@android:drawable/ic_menu_call" />

                        <ImageButton
                            android:id="@+id/gpsButton2"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:backgroundTint="#C2185B"
                            android:contentDescription="GPS Icon"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/gps" />

                    </LinearLayout>

                    <WebView
                        android:id="@+id/fireMapWebView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        tools:ignore="WebViewLayout" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Ambulance Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/ambulanceCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#FFE4EC"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ambulanceIcon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="Ambulance Icon"
                            android:padding="4dp"
                            android:src="@drawable/ic_ambulance" />

                        <TextView
                            android:id="@+id/ambulanceText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingStart="12dp"
                            android:text="Ambulance"
                            android:textColor="#C2185B"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/ambulanceCall"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginRight="10dp"
                            android:backgroundTint="#C2185B"
                            android:contentDescription="Call Ambulance"
                            android:src="@android:drawable/ic_menu_call" />

                        <ImageButton
                            android:id="@+id/gpsButton3"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:backgroundTint="#C2185B"
                            android:contentDescription="GPS Icon"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/gps" />

                    </LinearLayout>

                    <WebView
                        android:id="@+id/ambulanceMapWebView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        tools:ignore="WebViewLayout" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/backBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#C2185B"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:padding="12dp"
                android:text="Back"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:cornerRadius="12dp" />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>
